<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MovieDetailsActivity">

        <TextView
            android:id="@+id/tv_movie_details_synopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:width="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="This is the movie description that should be somewhat big"
            app:layout_constraintTop_toBottomOf="@+id/iv_movie_details_poster"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />


        <TextView
            android:id="@+id/tv_movie_details_date_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="255dp"
            tools:layout_conversion_absoluteX="113dp"
            tools:layout_conversion_absoluteY="65dp"
            tools:text="2015"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_movie_details_poster"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_details_title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />


        <TextView
            android:id="@+id/tv_movie_details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_green_dark"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="255dp"
            tools:layout_conversion_absoluteX="113dp"
            tools:layout_conversion_absoluteY="32dp"
            tools:text="Title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/iv_movie_details_poster"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:layout_constraintHorizontal_weight="0.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_details_title" />

        <TextView
            android:id="@+id/tv_movie_details_vote_average"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="255dp"
            tools:layout_conversion_absoluteX="113dp"
            tools:layout_conversion_absoluteY="81dp"
            tools:text="8"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_details_runtime"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_details_date_release"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/tv_movie_details_date_release"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_movie_details_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_details_date_release"
            app:layout_constraintRight_toRightOf="@+id/tv_movie_details_date_release"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_details_date_release"
            tools:text="120m"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/holo_green_light"
            android:elevation="0dp"
            android:padding="8dp"
            android:text="@string/button_details_add_to_favorites"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_details_date_release"
            app:layout_constraintRight_toRightOf="@+id/tv_movie_details_date_release"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_details_vote_average"
            tools:text="Add to Favorites" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>